{
    "extends": [
        "config:base"
    ],
    "automerge": true,
    "major": {
        "automerge": false
    },
    "labels": [
        "renovate",
        "dependencies"
    ],
    "automergeType": "pr",
    "timezone": "Europe/Berlin",
    "schedule": [
        "after 9am every weekday",
        "before 6pm every weekday"
    ],
    "statusCheckVerify": true,
    "packageRules": [
        {
            "packageNames": ["aws-sdk"],
            "extends": ["schedule:weekly"]
        }
    ],
    "ignoreDeps": [
        "bugsnag",
        "eslint",
        "eslint-config-airbnb",
        "eslint-plugin-import",
        "eslint-plugin-jsx-a11y",
        "eslint-plugin-react"
    ]
}
